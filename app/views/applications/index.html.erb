<% if @pets %>
	<% @pets.applications.each do |application| %>
	<%= link_to "#{application.name}", "/applications/#{application.id}"%>
	<% end %>
<% end %>

<% if @applications %>

<% @applications.each do |application| %>
	<section id="application-<%= application.id %>">
		<h1><%= application.name %></h1>
		<%= application.address %>
		<%= application.city %>
		<%= application.state %>
		<%= application.zip %>
		<%= application.phone_number %>
		<%= application.why_would_you_make_a_good_pet_owner %>
		<% application.pets.each do |pet| %>
			<section id="pet-<%= pet.id %>">
				<p><%= pet.name %></p>
			</section>
		<% end %>
	</section>
	<% end %>
<% end %>
