<!DOCTYPE html>
<html>
  <head>
    <header>
      <h1 id="shelterHeader">All Shelters</h1>
      <p><%= link_to "New Shelter", "/shelters/new" %></p>
    </header>
  </head>

  <body>
    <div>
      <% @shelters.each do |shelter| %>
      <h2 id="shelterName"><%= link_to "#{shelter.name}", "/shelters/#{shelter.id}" %></h2>
      <h3><%= shelter.address %>
          <%= shelter.city %>
          <%= shelter.state %>
          <%= shelter.zip %></h3>
      <h5 class="edit Buttons"><%= link_to 'Edit', "/shelters/#{shelter.id}/edit" %> |
      <%= link_to 'Delete', "/shelters/#{shelter.id}", method: :delete %></h5>
      <%end%>
    </div>

  </body>
</html>
