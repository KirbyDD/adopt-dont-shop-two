<div>
<%= form_tag "/shelters/#{@shelter.id}/reviews/#{@review.id}", method: :patch do %>

<p><%= label_tag :title %>
<%= text_field_tag :title %></p>

<p><%= label_tag :rating %>
<%= text_field_tag :rating %></p>

<p><%= label_tag :content %>
<%= text_field_tag :content %></p>

<p><%= label_tag :optional_picture %>
<%= text_field_tag :optional_picture %></p>

  <%= submit_tag 'Update Review.' %>
<% end %>
</div>
