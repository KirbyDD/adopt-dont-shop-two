<div>
  <%= form_tag("/shelters/#{@shelter_id}/reviews", method: :post) do %>

    <p><%= label_tag :title %>
    <%= text_field_tag :title %></p>

    <p><%= label_tag :rating %>
    <%= number_field_tag :rating %></p>

    <p><%= label_tag :content %>
    <%= text_field_tag :content %></p>

    <p><%= label_tag :optional_picture %>
    <%= text_field_tag :optional_picture %></p>

    <%= submit_tag "Add New Review"%>
  <% end %>
</div>
